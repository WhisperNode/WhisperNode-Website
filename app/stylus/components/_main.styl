/* titles */
p
	font($base-font-size, $base-line-height, $text-color, $base-font-family, 400)
	padding 0 0 15px 0
	&:last-child
		padding-bottom 0

h1
	font($font-size-h1, $line-height-h1, $title-color, $michroma, 700)
	padding 0

h2
	font($font-size-h2, $line-height-h2, $title-color, $michroma, 700)
	padding 0

h3
	font($font-size-h3, $line-height-h3, $title-color, $michroma, 700)
